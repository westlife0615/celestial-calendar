<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_stars"
    android:scaleType="fitCenter"

    >

    <!-- Activity Layout XML -->
    <!-- @author croute -->
    <!-- @since 2011.03.08 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_gravity="right"
        android:gravity="right"/>
    <ImageView
        android:id="@+id/gv_calendar_activity_tv_title"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
       />

</LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@android:color/transparent"
        android:layout_weight="1">
        <!--android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"-->


        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sun"
            android:scaleType="fitCenter"

            />
        <ImageView
            android:scaleType="fitCenter"


            android:background="@drawable/mon"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="42dp"
            />

        <ImageView
            android:scaleType="fitCenter"

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="42dp"
            android:layout_height="wrap_content"

            android:background="@drawable/tue"
            />

        <ImageView

            android:scaleType="fitCenter"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="42dp"
            android:layout_height="wrap_content"

            android:background="@drawable/wed"
            />

        <ImageView

            android:scaleType="fitCenter"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="42dp"
            android:layout_height="wrap_content"

            android:background="@drawable/thu"
            />


        <ImageView

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@drawable/fri"
            />

        <ImageView

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@drawable/sat"
            />

    </LinearLayout>
    <GridView
        android:id="@+id/gv_calendar_activity_gv_calendar"
        android:layout_gravity="center"
        android:layout_width="322dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:background="@android:color/transparent"
        android:listSelector="@drawable/gridview_selector"
        android:layout_weight="5"

        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/transparent"
        >
        <ImageView
            android:id="@+id/gv_calendar_activity_b_last"
            android:layout_gravity="left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_moon"  />
        <TextView
            android:id="@+id/bottom"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/gv_calendar_activity_b_next"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_moon"/>

    </LinearLayout>
</LinearLayout>